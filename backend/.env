# WeatherPro SaaS Backend Environment Variables

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/weatherpro_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=weatherpro_db
DB_USER=postgres
DB_PASSWORD=your_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Weather API Configuration
OPENWEATHER_API_KEY=your_openweather_api_key_here
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://weather-production-3d13.up.railway.app
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Email Configuration (for future features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload (for future features)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090


